<!-- エラーメッセージ -->
<% if @article.errors.any? %>
      <% @article.errors.full_messages.each do |msg| %>
        <div class="row">
          <div class="col-xs-3">
            <div class="alert alert-danger"><%= msg %></div>
          </div>
        </div>
      <% end %>
<% end %>

<%= form_for @article do |f| %>
    <div class="row">
      <div class="form-group">
        <div class="col-xs-7">
            <%= f.label :title, "Title" %><br>
            <%= f.text_field :title, class: "form-control"  %>
        </div>
       </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="col-xs-7">
          <%= f.label :body, "Content" %><br>
          <%= f.text_area :body, :size => "20x20", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="field">
      <% if @article.picture? %>
          <%= image_tag @article.picture.url %>
      <% end %><br>
      <%= f.label :picture %><br>
      <%= f.file_field :picture %>
    </div>

    <div class="form-group">
      <div class="dropdown">
         <%= f.label :category_id, "Category" %>
         <%= f.collection_select :category_id, Category.all, :id, :name, class: "btn btn-default dropdown-toggle" %>
      </div>
    </div>

　　<div class="form-group">
      <div class="btn-group">
        <%= f.submit("Submit", class: "btn btn-primary btn-lg") %>
      </div>
   </div>
<% end %>

<%= form_tag(:controller => "categories", :action => "create", :method => "get") do %>
    <div class="form-group">
      <%= text_field_tag('add', value = nil, placeholder: "add category", class: "form-cotrol") %>
      <%= submit_tag("add") %>
    </div>
<% end %>
