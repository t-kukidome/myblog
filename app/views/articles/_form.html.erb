<!-- エラーメッセージ -->
<% if @article.errors.any? %>
    <%= @article.errors.count %>件のエラーがあります。
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>

      <% end %>
    </ul>
<% end %>
<div class="container">

<%= form_for @article do |f| %>
    <p>
      <%= f.label :title, "タイトル" %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :body, "本文" %><br>
      <%= f.text_area :body, :size => "20x10" %>
    </p>

    <div class="field">
      <% if @article.picture? %>
          <div class="thumbnail">
            <%= image_tag @article.picture.url %>
          </div>
      <% end %><br>
      <%= f.label :picture %><br>
      <%= f.file_field :picture %>
    </div>

    <div class="field">
      <p>
       <%= f.label :category_id, "カテゴリ選択" %>
       <%= f.collection_select :category_id, Category.all, :id, :name %>
      </p>
    </div>

    <p>
      <%= f.submit("投稿") %>
    </p>
<% end %>
</div>